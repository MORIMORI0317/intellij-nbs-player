<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>net.morimori0317.inp</id>
    <name>Minecraft NBS Player</name>
    <vendor>MORIMORI0317</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group id="NBS.NBSPlayerActions">
            <action class="net.morimori0317.inp.editor.actions.PlayPauseAction"
                    id="NBS.Editor.PlayPause"
                    icon="AllIcons.Actions.Execute"/>
        </group>

        <group id="NBS.EditorToolbar">
            <reference id="NBS.Editor.PlayPause"/>
        </group>
    </actions>

    <applicationListeners>
        <listener class="net.morimori0317.inp.TestFileOpenListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="net.morimori0317.inp.NBSPlayerService"/>
        <fileType name="NBS"
                  implementationClass="net.morimori0317.inp.NBSFileType"
                  fieldName="INSTANCE"
                  language="NBS"
                  extensions="nbs"/>
        <fileEditorProvider implementation="net.morimori0317.inp.editor.NBSFileEditorProvider"/>
    </extensions>

</idea-plugin>
